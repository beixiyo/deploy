{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/typings",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}